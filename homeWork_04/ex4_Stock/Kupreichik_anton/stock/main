package com.company;
import java.util.Scanner;

class Stock {
    Stock(String name_,double value_){
        this.companyName = name_;
        this.minCost = value_;
        this.maxCost = value_;
        this.currentValue = value_;
    }
    String companyName;
    double currentValue;
    double minCost;
    double maxCost;
    void updatePrice(double newCurrentValue){
        this.currentValue = newCurrentValue;
        if(minCost > newCurrentValue) {
        this.minCost = newCurrentValue;
            System.out.println("Изменен параметр минимальной ст-ти");
        }
        else {if(maxCost < newCurrentValue){
         this.maxCost = newCurrentValue;
            System.out.println("Изменен параметр максимальной ст-ти");
        }
        }
    }
    void printInfo(){
        System.out.println("Компания: " + companyName + " Текущая стоимость: " + currentValue + " Максимальная ст-ть: " + maxCost + " Минимальная ст-ть: "  + minCost);
    }
}
public class main {
    public static void main(String[] args) {
        Scanner in = new Scanner(System.in);
        double newCurrentValue;
        System.out.println("Введите название компании");
        String name_ = in.nextLine();
        System.out.println("Введите параметр стоимости");
        double value_ = in.nextDouble();
        Stock google = new Stock(name_,value_);
        google.printInfo();
        int choose = 0;
        while(choose != 3) {
            System.out.println("1.Ввести новую текущую ст-ть\n2.Показать информацию\n3.Выход");
            choose =in.nextInt();

            switch (choose) {
                case 1:
                    System.out.println("Введите новую текущую ст-ть:");
                    newCurrentValue = in.nextDouble();
                    google.updatePrice(newCurrentValue);
                    break;
                case 2:
                    google.printInfo();
                    break;
                case 3:
                    break;

            }
        }
    }
}
